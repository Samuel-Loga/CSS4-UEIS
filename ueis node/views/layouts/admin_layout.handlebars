  </div>
  <!-- Scripts for DataTables -->
    <script src="https://code.jquery.com/jquery-3.7.0.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="/static/javascript/moment.js"></script>
    <script>
      $(document).ready(function () {
      const cards_table = $('#cards_table').DataTable({
          "ajax": {
              "url": "/Admin/cards_table",
              "dataSrc": ""
          },
          "columns": [
              {title:'National ID',data: 'nid'},
              {title:'card ID',data: 'card_id'},
              {title:'Registered on',"render": (data,type,row) => {
                const date = moment(row.registered_on);
                const formattedTime = date.format('ddd MMM D YYYY HH:mm:ss');
                return `${formattedTime}`
               }
              },
              {title:'Status',data: 'status'},
              {title:'Action',
                "render": function (data, type, row) {
                    if (row.status == 'active')
                      return `<button data-bs-toggle="modal" data-bs-target="#block_card_modal" class="actionBtn" id="${row.card_id}" onclick="model_function('${row.card_id}','/card/update','${row.card_id}','cards_table')">Block</button>`;
                    else if (row.status == 'blocked')
                      return `<button data-bs-toggle="modal" data-bs-target="#activate_card_modal" class="actionStatus" id="${row.card_id}" onclick="model_function('${row.card_id}','/card/update','${row.card_id}','cards_table')">Activate</button>`;
                }
              }
              // Add more columns as needed
          ]
      });

      const services_table = $('#services_table').DataTable({
          "ajax": {
              "url": "/Admin/services_table",
              "dataSrc": ""
          },
          "columns": [
              {title:'ID', data: 'id'},
              {title:'Thirdparty', data: 'third_party'},
              {title:'Name', data: 'name'},
              {title:'Registered on',"render": (data,type,row) => {
                const date = moment(row.registered_on);
                const formattedTime = date.format('ddd MMM D YYYY HH:mm:ss');
                return `${formattedTime}`
               }
              },
              {title:'Status', data: 'status'},
              {title:'Action',
                "render": function (data, type, row) {
                  if (row.status == 'active')
                      return `<button data-bs-toggle="modal" data-bs-target="#block_services_modal" class="actionBtn" id="${row.id}" onclick="model_function('${row.name}','/service/update','${row.id}','services_table')">Block</button>`;
                    else if (row.status == 'blocked')
                      return `<button data-bs-toggle="modal" data-bs-target="#activate_services_modal" class="actionStatus" id="${row.id}" onclick="model_function('${row.name}','/service/update','${row.id}','services_table')">Activate</button>`;
                }
              }
              // Add more columns as needed
          ]
      });

      const users_table = $('#users_table').DataTable({
          "ajax": {
              "url": "/Admin/users_table",
              "dataSrc": ""
          },
          "columns": [
              {title:'National ID', data: 'nid'},
              {title:'Name', data: 'name'},
              {title:'Email', data: 'email'},
              {title:'Phone', data: 'phone'},
              {title:'Registered on',"render": (data,type,row) => {
                const date = moment(row.created_at);
                const formattedTime = date.format('ddd MMM D YYYY HH:mm:ss');
                return `${formattedTime}`
               }
              },
              {title:'Status', data: 'status'},
              {title:'Action',
                "render": function (data, type, row) {
                  if (row.status == 'active')
                      return `<button data-bs-toggle="modal" data-bs-target="#block_users_modal" class="actionBtn" id="${row.nid}" onclick="model_function('${row.name}','/identity/update','${row.ueis_id}','users_table')">Block</button>`;
                    else if (row.status == 'blocked')
                      return `<button data-bs-toggle="modal" data-bs-target="#activate_users_modal" class="actionStatus" id="${row.nid}" onclick="model_function('${row.name}','/identity/update','${row.ueis_id}','users_table')>Activate</button>`;
                }
              }
              // Add more columns as needed
          ]
      });

      const third_table = $('#thirdparties_table').DataTable({
          "ajax": {
              "url": "/Admin/thirdparties_table",
              "dataSrc": ""
          },
          "columns": [
              {title:'ID',data: 'company_id'},
              {title:'Name',data: 'name'},
              {title:'Description',data: 'description'},
              {title:'Location',data: 'Location'},
              {title:'Email',data: 'email'},
              {title:'Phone',data: 'phone'},
              {title:'Registered on',"render": (data,type,row) => {
                const date = moment(row.registered_on);
                const formattedTime = date.format('ddd MMM D YYYY HH:mm:ss');
                return `${formattedTime}`
               }
              },
              {title:'Status',data: 'status'},
              {title:'Action',
                "render": function (data, type, row) {
                  if (row.status == 'active')
                      return `<button data-bs-toggle="modal" data-bs-target="#block_third_party_modal" class="actionBtn" id="${row.company_id}" onclick="model_function('${row.name}','/third/update','${row.id}','thirdparties_table')">Block</button>`;
                    else if (row.status == 'blocked')
                      return `<button data-bs-toggle="modal" data-bs-target="#activate_third_party_modal" class="actionStatus" id="${row.company_id}" onclick="model_function('${row.name}','/third/update','${row.id}','thirdparties_table')>Activate</button>`;
                }
              }
              // Add more columns as needed
          ]
      });

      // Additional initialization and live reloading code
  });

  </script>
