<title>Manage Cards - Unified Electronic Identification System</title>

<span id="identity" hidden>4</span>
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
  <h5>Manage ID Cards</h5>
  <div class="btn-toolbar mb-2 mb-md-0">
    <div class="btn-group me-2">
      <button type="button" class="btn btn-sm btn-outline-secondary">{{name}}</button>
      <button type="button" class="btn btn-sm btn-outline-secondary">{{role}}</button>
    </div>
  </div>
</div>

<!-- Manage cards -->
<div id="manage_cards">
  <div class="table-responsive">
    <table class="table table-striped table-sm display nowrap" id="cards_table" style="width:100%">

    </table>
  </div>
</div>


<div class="modal fade" id="block_card_modal" tabindex="-1" aria-labelledby="blockModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="blockModalLabel" class="">Block Card</h5>
      </div>

      <div class="modal-body">
        <!-- service Reg. Form -->
        <form id="block_modal_form">
          <p>Are you sure you want to block <b><span id="holder"></span></b></p>
          <input type="text" id="status" name="status" hidden required>
        </form>
      </div>

      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-danger">Block</button>
      </div>
    </div>
  </div>
</div>
